<script type="text/javascript">
    $('tbody').append('<tr><td colspan="3" class="text-right"><b>TOPLAM </b></td><td class="text-center"><b>' + @toplamadet + '</b></td><td class="text-right"><b>' + @toplamgelir + '</b></td></tr>');
</script>
