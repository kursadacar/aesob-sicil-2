 @{ ViewBag.Title = "CadSokBulvTanimlama"; Layout = "~/Views/Shared/_Layout.cshtml"; }  <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" /> <link href="/Scripts/select2/select2.css" rel="stylesheet" /> <div class="row"> <div class="col-md-12"> <div class="card m-t-15"> <div class="header bg-blue-grey"> <h2>BULVAR/CADDE/SOKAK TANIMLAMA</h2> </div> <div class="body"> <div class="row"> <div class="col-md-12" style="padding-top: 20px;"> <div class="col-md-5"> <div class="form-group"> <label>İLÇE ADI</label> <input class="form-control" id="ddlIlce" data-attribute="ddlIlce" onchange="$('[data-attribute=\'ddlMahalle\']').select2('open')" /> </div> <div id="dvMahalle" class="form-group"> <label>MAHALLE ADI</label> <input class="form-control" data-attribute="ddlMahalle"  /> </div> <div id="dvGoster"> <div class="form-group"> <label>BULVAR/CADDE/SOKAK ADI</label> <div class="input-group"> <div class="form-line"> <input type="text" class="form-control" id="txtSokak" data-attribute="txtSokak" onkeyup="BuyukHarf(this)" placeholder="Bulv./Cad./Sok. adını giriniz." />  </div> <span style="color: #dcdcdc; font-style: italic">Örnek: HACIHÜSEYİNLER SOK.</span> </div> </div> <div class="p-t-20"> <button id="btnKaydet" class="btn btn-lg btn-success w100" title="Kaydet"><i class="fa fa-save"></i> Kaydet</button> </div> </div> </div> <div class="col-md-7"> <h3><label id="lblMahalleAdi"></label></h3> <div id="dvSokaklar"></div> </div> </div> </div> </div> </div> </div> </div>






































































































































































































@section scripts{
    <script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
    <script src="/Scripts/select2/select2.min.js"></script>
    <script>
        $("#dvGoster").hide();
        $("#dvMahalle").hide();
        $("#dvSokaklar").hide();
        IlceleriGetir();
        function IlceleriGetir() {
            $.ErcanAyhan.Server.GetAsync("", "/Tanimlamalar/GetirIlceler", function (e) {
                $("[data-attribute='ddlIlce']").select2({
                    placeholder: 'İlçe seçiniz',
                    type: "GET",
                    data: e.IlceListesi,
                });
            });
        }
        $("[data-attribute='ddlIlce']").change(function () {
            var ilce = $(this).select2('data');
            var ilceadi = ilce.text;
            $.ErcanAyhan.Server.GetAsync("", "/Tanimlamalar/ComboBoxIlceyeGoreMahalleler?ilceid=" + $(this).val(), function (t) {
                $("[data-attribute='ddlMahalle']").select2({
                    placeholder: 'Mahalle seçiniz',
                    type: "GET",
                    data: t.MahalleListesi,
                });
                $("#dvMahalle").show();
            });
        });
        $("[data-attribute='ddlMahalle']").change(function () {
            var ilce = $(this).select2('data');
            var ilceadi = ilce.text;
            $.ErcanAyhan.Server.GetAsync("", "/Tanimlamalar/DTMahalleyeGoreCadSokBulv?mahalleid=" + $(this).val(), function (t) {
                $("#dvSokaklar").html("");
                $("#dvSokaklar").html(t.ds);
                $("#tblSokaklar").dataTable({
                    "language": {
                        "sDecimal": ",",
                        "sEmptyTable": "Tabloda herhangi bir veri mevcut değil",
                        "sInfo": "_TOTAL_ kayıttan _START_ - _END_ arasındaki kayıtlar gösteriliyor",
                        "sInfoEmpty": "Kayıt yok",
                        "sInfoFiltered": "(_MAX_ kayıt içerisinden bulunan)",
                        "sInfoPostFix": "",
                        "sInfoThousands": ".",
                        "sLengthMenu": "Sayfada _MENU_ kayıt göster",
                        "sLoadingRecords": "Yükleniyor...",
                        "sProcessing": "İşleniyor...",
                        "sSearch": "Ara:",
                        "sZeroRecords": "Eşleşen kayıt bulunamadı",
                        "oPaginate": {
                            "sFirst": "İlk",
                            "sLast": "Son",
                            "sNext": "Sonraki",
                            "sPrevious": "Önceki"
                        },
                        "oAria": {
                            "sSortAscending": ": artan sütun sıralamasını aktifleştir",
                            "sSortDescending": ": azalan sütun sıralamasını aktifleştir"
                        }
                    }
                });
                $("#lblMahalleAdi").text(ilceadi + " AİT BULVAR/CADDE ve SOKAKLAR")
                $("#dvGoster").show();
                $("#dvSokaklar").show();
                $("[data-attribute='txtSokak']").focus();
            });
        });
        $(document).keypress(function (e) {
            if (e.which == 13) {
                $("#btnKaydet").trigger("click");
            }
        });
        $("#btnKaydet").click(function () {
            var veriler = {
                ilceid: $("[data-attribute='ddlIlce']").val(),
                mahalleid: $("[data-attribute='ddlMahalle']").val(),
                cadsokbulv: $("[data-attribute='txtSokak']").val()
            }
            if ($("[data-attribute='txtSokak']").val() != "") {
                $.ErcanAyhan.Server.PostAsync(veriler, "/Tanimlamalar/KaydetSokak", function (e) {
                    if (e > 0) {
                        $.ErcanAyhan.Server.GetAsync("", "/Tanimlamalar/DTMahalleyeGoreCadSokBulv?mahalleid=" + e, function (t) {
                            $("#dvSokaklar").html("");
                            $("#dvSokaklar").html(t.ds);
                            $("#tblSokaklar").dataTable({
                                "language": {
                                    "sDecimal": ",",
                                    "sEmptyTable": "Tabloda herhangi bir veri mevcut değil",
                                    "sInfo": "_TOTAL_ kayıttan _START_ - _END_ arasındaki kayıtlar gösteriliyor",
                                    "sInfoEmpty": "Kayıt yok",
                                    "sInfoFiltered": "(_MAX_ kayıt içerisinden bulunan)",
                                    "sInfoPostFix": "",
                                    "sInfoThousands": ".",
                                    "sLengthMenu": "Sayfada _MENU_ kayıt göster",
                                    "sLoadingRecords": "Yükleniyor...",
                                    "sProcessing": "İşleniyor...",
                                    "sSearch": "Ara:",
                                    "sZeroRecords": "Eşleşen kayıt bulunamadı",
                                    "oPaginate": {
                                        "sFirst": "İlk",
                                        "sLast": "Son",
                                        "sNext": "Sonraki",
                                        "sPrevious": "Önceki"
                                    },
                                    "oAria": {
                                        "sSortAscending": ": artan sütun sıralamasını aktifleştir",
                                        "sSortDescending": ": azalan sütun sıralamasını aktifleştir"
                                    }
                                }
                            });
                            $("#lblMahalleAdi").text(ilceadi + " AİT BULVAR/CADDE ve SOKAKLAR")
                            $("#dvGoster").show();
                            $("#dvSokaklar").show();
                            $("[data-attribute='txtSokak']").focus();
                        });
                        $("[data-attribute='txtSokak']").val("");
                        swal("Bulvar Cadde Sokak kaydı başarılı.", "Yeni Bulvar Cadde Sokak oluşturma işlemi başarı ile gerçekleştirildi.", "success");
                    }
                });
            }
            else {
                $("[data-attribute='txtMahalle']").focus();
                swal("Bulvar/Cadde/Sokak girmelisiniz.", "Lütfen alanları boş geçmeyiniz.", "warning");

            }
        });
    </script>
}

