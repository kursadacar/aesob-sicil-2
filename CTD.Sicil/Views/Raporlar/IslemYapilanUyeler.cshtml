 @{ ViewBag.Title = "İşlem Yapılan Üyeler"; Layout = "~/Views/Shared/_Layout.cshtml"; }  <link href="/Scripts/select2/select2.css" rel="stylesheet" /> <link href="~/Content/DataTables/css/buttons.dataTables.min.css" rel="stylesheet" />  <div class="row"> <div class="col-md-12"> <div class="card esbis m-t-15"> <div class="header bg-deep-purple"> <h2 style="color:white">İŞLEM YAPILAN ÜYELERE GÖRE RAPORLAMA</h2> </div> <div class="body"> <div class="row"> <div class="col-md-3 p-t-10"> <div class="form-group"> <label>SİCİL VEZNESİ</label> <input class="form-control m-t-5" id="vezne" data-attribute="vezne" /> </div> </div> <div class="col-md-2" style="padding-top: 10px;"> <div class="form-group"> <label>BAŞLANGIÇ TARİHİ</label> <div class="input-group"> <div class="form-line"> <input type="text" class="form-control" id="txtTarihIlk" maxlength="10" onkeyup="tarih(this)" value='@DateTime.Now.ToString("dd.MM.yyyy")' /> </div> </div> </div>  </div> <div class="col-md-2" style="padding-top: 10px;"> <div class="form-group"> <label>BİTİŞ TARİHİ</label> <div class="input-group"> <div class="form-line"> <input type="text" class="form-control" id="txtTarihSon" maxlength="10" onkeyup="tarih(this)" value='@DateTime.Now.ToString("dd.MM.yyyy")' /> </div> </div> </div> </div> <div class="col-md-1 p-t-20"> <div id="btndiv" class="m-l-10"> <button id="btnListele" class="btn btn-lg btn-primary w100" title="Listele"><i class="fa fa-search"></i> Listele</button> </div> </div> <div class="col-md-4 p-t-20"> <div id="btnGroup" class="col-md-12 text-right m-b-10"> <a href="#" class="btn btn-lg btn-danger" onclick="location.href = '/Raporlar/ReportYeniKayitYapilanUyeler?id=PDF&ilktarih=' + document.getElementById('txtTarihIlk').value + '&sontarih=' + document.getElementById('txtTarihSon').value + '&vezne=' + document.getElementById('vezne').value; "><i class="fa fa-file-pdf-o"></i> Yazdır (.pdf)</a> </div> <div class="clearfix"></div>  </div> <div class="clearfix"></div> <div id="dvYeniKayitlar" class="col-md-12 m-t-10"></div> </div> </div> </div> </div> </div>  



















































































































































































































@section scripts{
    <script src="/Scripts/select2/select2.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.buttons.min.js"></script>
    <script src="~/Scripts/DataTables/jszip.min.js"></script>
    <script src="~/Scripts/DataTables/buttons.html5.min.js"></script>
    <script>
        $("#btnGroup").hide();
        $.ErcanAyhan.Server.GetAsync("", "/Makbuz/GetirVezneler", function (a) {
            $("[data-attribute='vezne']").select2({
                placeholder: 'Sicil veznesi seçiniz',
                type: "GET",
                data: a.VezneListesi
            });
        });
        $("#btnListele").click(function () {
            var ilktarih = $("#txtTarihIlk").val();
            var sontarih = $("#txtTarihSon").val();
            var vezne = $("[data-attribute='vezne']").val();
            $.ajax({
                url: "@Url.Action("_YeniKayitYapilanUyeler", "Raporlar")",
                data: { ilktarih: ilktarih, sontarih: sontarih, vezne: vezne },
                success: function (data) {
                    $("#dvYeniKayitlar").html(data);
                    $("#btnGroup").show();
                }
            });
        });
    </script>
}