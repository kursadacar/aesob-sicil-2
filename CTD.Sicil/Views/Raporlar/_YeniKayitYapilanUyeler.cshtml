       <div>
           @(item.WebGrid.Rows.IndexOf(item) + 1)
       </div>
    </text>),
    grid.Column("SICILNO", "Sicil No", style: "text-center"),
    grid.Column("ADSOYAD", "Adı Soyadı"),
    grid.Column("KISAAD", "MESLEK ODASI", style: "text-left"),
    grid.Column("MESLEK", "MESLEK", style: "tutar text-left"),
    grid.Column("adi", "İŞLEMİ YAPAN", style: "tutar text-left")
}) <script type="text/javascript">
       $('tbody').append('<tr><td colspan="3" class="text-right"><b>TOPLAM </b></td><td class="text-center"><b>' + "....." + '</b></td><td class="text-right"><b>' + "...." + '</b></td></tr>');
