 @{ ViewBag.Title = "Tahsilat Listesi"; Layout = "~/Views/Shared/_Layout.cshtml"; } <link href="/Scripts/select2/select2.css" rel="stylesheet" /> <div class="row"> <div class="col-md-12"> <div class="card esbis m-t-15"> <div class="header bg-blue-grey"> <h2>TAHSİLAT LİSTESİ DÖKÜMÜ</h2> </div> <div class="body"> <div class="row"> <div class="col-md-3 p-t-10"> <div class="form-group"> <label>SİCİL VEZNESİ</label> <input class="form-control m-t-5" id="vezne" data-attribute="vezne" /> </div> </div> <div class="col-md-2" style="padding-top: 10px;"> <div class="form-group"> <label>BAŞLANGIÇ TARİHİ</label> <div class="input-group"> <div class="form-line"> <input type="text" class="form-control" id="txtTarihIlk" maxlength="10" onkeyup="tarih(this)" value='@DateTime.Now.ToString("dd.MM.yyyy")' /> </div> </div> </div>  </div> <div class="col-md-2" style="padding-top: 10px;"> <div class="form-group"> <label>BİTİŞ TARİHİ</label> <div class="input-group"> <div class="form-line"> <input type="text" class="form-control" id="txtTarihSon" maxlength="10" onkeyup="tarih(this)" value='@DateTime.Now.ToString("dd.MM.yyyy")' /> </div> </div> </div> </div> <div class="col-md-1 p-t-20"> <div id="btndiv" class="m-l-10"> <button id="btnListele" class="btn btn-lg btn-primary w100" title="Listele"><i class="fa fa-search"></i> Listele</button> </div> </div> <div class="col-md-4 p-t-20"> <div id="btnGroup" class="col-md-12 text-right m-b-10"> <a href="#" class="btn btn-lg btn-danger" target="_blank" onclick="location.href = '/Makbuz/ReportV2?id=PDF&ilktarih=' + document.getElementById('txtTarihIlk').value + '&sontarih=' + document.getElementById('txtTarihSon').value + '&vezne=' + document.getElementById('vezne').value; "><i class="fa fa-file-pdf-o"></i> Yazdır (.pdf)</a> <a href="#" class="btn btn-lg btn-warning" target="_blank" onclick="location.href='/Makbuz/Report/Excel?ilktarih=' + document.getElementById('txtTarihIlk').value + '&sontarih=' + document.getElementById('txtTarihSon').value; "><i class="fa fa-file-excel-o"></i> Yazdır (.xls)</a> </div> <div class="clearfix"></div>  </div> <div class="clearfix"></div> <div id="dvTahsilatTuru" class="col-md-12 m-t-10"></div> </div> </div> </div> </div> </div>  







































































































































































































































@section scripts{
<script src="/Scripts/select2/select2.min.js"></script>
    <script>
        $.ErcanAyhan.Server.GetAsync("", "/Makbuz/GetirVezneler", function (a) {
            $("[data-attribute='vezne']").select2({
                placeholder: 'Sicil veznesi seçiniz',
                type: "GET",
                data: a.VezneListesi
            });
        })
        $("#btnGroup").hide();
        $("#btnListele").click(function () {
            var ilktarih = $("#txtTarihIlk").val();
            var sontarih = $("#txtTarihSon").val();
            var vezne = $("[data-attribute='vezne']").val();
            $.ajax({
                url: "@Url.Action("_TahsilatTuruneGore", "Makbuz")",
                data: { ilktarih: ilktarih, sontarih: sontarih, vezne: vezne },
                success: function (e) {
                    $("#dvTahsilatTuru").html(e);
                    $("#btnGroup").show();
                }
            });
        })

    </script>

}